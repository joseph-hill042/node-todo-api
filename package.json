{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "An API written in Node using MongoDB for data store.",
  "main": "index.js",
  "scripts": {
    "dev": "node fuse.js",
    "postinstall": "npm run dist",
    "start": "node dist/*-server.js",
    "dist": "node fuse dist",
    "test": "jest"
  },
  "engines": {
    "node": "10.13.0"
  },
  "keywords": [
    "NodeJS",
    "MongoDB",
    "API"
  ],
  "jest": {
    "transform": {
      "^.+\\.(ts?|tsx?)$": "ts-jest"
    },
    "testRegex": "(src/tests/.*|(\\.|/)(test|spec))\\.(ts?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "author": "Joseph Hill",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/mongodb": "^3.1.17",
    "@types/mongoose": "^5.3.5",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "fuse-box": "^3.6.0",
    "jest": "^23.6.0",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2",
    "uglify-es": "^3.3.9",
    "uglify-js": "^3.4.9"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "mongodb": "^3.1.10",
    "mongoose": "^5.4.0"
  }
}
